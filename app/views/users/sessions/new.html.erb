<div class="container">
  <h2>Sign Up</h2>
  <%= form_with scope: :user, url: users_sessions_path , local: true, method: :post do |f| %>
    <div class="form-group">
      <%= f.file_field :image, class: "form-control" %>
    </div>
    <div class="form-group">
      <label for="email">First Name:</label>
      <%= f.text_field :first_name, class: "form-control", placeholder: "Enter first name" %>
    </div>
    <div class="form-group">
      <label for="pwd">Last Name:</label>
      <%= f.text_field :last_name, class: "form-control", placeholder: "Enter last name" %>
    </div>
    <div class="form-group">
      <label for="pwd">Email:</label>
      <%= f.email_field :email, class: "form-control", placeholder: "Enter your email" %>
    </div>
    <div class="form-group">
      <label for="pwd">Phone:</label>
      <%= f.text_field :phone, class: "form-control", placeholder: "Enter your phone" %>
    </div>
    <div class="form-group">
      <label for="pwd">Password:</label>
      <%= f.password_field :password, class: "form-control", placeholder: "Enter last name" %>
    </div>
    <button type="submit" class="btn btn-default">Submit</button>
  <% end %>
</div>